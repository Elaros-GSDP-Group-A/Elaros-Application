@model ElarosApp.Models.PatientModel


<span class="text-secondary p-1 small">Logged in as: <span class="text-success">@Model.ReferalCode</span></span>

@if (Model.Question != null)
{
    <h1 class="text-left display-4 bg-light text-secondary pb-1 pt-1 px-3 font-italic">Question - @Model.QuestionId:</h1>
}
else
{
    <h1 class="text-left display-4">Null Question:</h1>
}

<div class="container">
    <div class="row position-relative m-4">
        <div class="col-12">
            <div class="progress progress-bar-striped active" style="height: 25px;">
                @{int barValue = (int)Math.Round((((double)Model.QuestionId / 18.0) * 100), 0);}
                <div class="progress-bar progress-bar-animated progress-bar-striped active bg-success box-shadow" id="ProgresBar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: @barValue%;"><span class="lead font-weight-bold text-light">@barValue%</span></div>
            </div>
        </div>
    </div>
</div>


