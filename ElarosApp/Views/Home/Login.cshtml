@model string
<div class="alert alert-danger alert-dismissible fade show text-center" id="warningAlert" role="alert">
    By completing this questionnaire you agree to have your data used for audit & research.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="text-center">
    <h1 class="display-4">Please enter your referal code </h1>
    <p>This will be in your email inbox once your clinician has referred you...</p>

    <form method="post">
        <div class="form-group">
            <label class="text-muted">Referal Code: </label>
            <input type="text" value="" id="referalCode" name="referalCode" placeholder="A5j2iX" class="my-2"/><br />
            @if (!string.IsNullOrEmpty(Model))
            {
                <small class="form-text mb-3 text-danger">@Model is not a valid referal code.</small>
            } else
            {
                <small class="form-text mb-3">You must enter this exactly as it is in your email.</small>
            }
            <button type="submit" class="btn btn-lg btn-primary">Start Questionnaire</button>
        </div>
    </form>
</div>
